{
	"compilerOptions": {
	  "outDir": "./dist",
	  "strict": true,
	  "sourceMap": true,
	  "target": "es2017",
	  "moduleResolution": "node",
	  "module": "commonjs",
	  "rootDir": "src",
	  "lib": [
		"ES2022",
	  ],
	  "skipLibCheck": true,
	  "esModuleInterop": true
	},
	"include": [
	  "src/**/*.ts"
	],
	"exclude": [
	  "node_modules"
	]
  }